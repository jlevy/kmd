:root {
  --color-primary: #488189;
  --color-primary-light: #79bbc5;
  --color-secondary: #6b7280;
  --color-bg: #f3f4f6;
  --color-text: #111827;
  --color-hover: #d1d5db;
  --color-hover-bg: #eff0f1;
  --color-hint: #9ca3af;

  --font-sans: "Varta", "Noto Emoji", sans-serif;
  --font-serif: "PT Serif", "Noto Emoji", serif;
}

{{ color_defs|safe }}

body {
  font-family: var(--font-serif);
  color: var(--color-text);
  line-height: 1.5;
  padding: 2rem;
  margin: auto;
}

p {
  margin-bottom: 1rem;
}

h1,
h2,
h3,
h4 {
  line-height: 1.2;
}

h1 {
  font-size: 1.7rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

h2 {
  font-size: 1.4rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

h3 {
  font-size: 1.15rem;
  margin-top: 1.5rem;
  margin-bottom: 1rem;
}

h4 {
  margin-top: 1rem;
  margin-bottom: 1rem;
}

/* Long text stylings, for nicely formatting blog post length or longer texts. */

.long-text h1 {
  font-family: var(--font-serif);
  font-weight: 400;
}

.long-text h2 {
  font-family: var(--font-serif);
  font-weight: 400;
  font-style: italic;
}

.long-text h3 {
  font-family: var(--font-sans);
  font-weight: 700;
  text-transform: uppercase;
}

.long-text h4 {
  font-family: var(--font-serif);
  font-weight: 700;
}

.subtitle {
  font-family: var(--font-serif);
  font-style: italic;
  font-size: 1rem;
}

ul {
  list-style-type: none;
  margin-left: 2rem;
  margin-bottom: 1rem;
  padding-left: 0;
}

li {
  margin-top: 0.5rem;
  margin-bottom: 0;
  position: relative;
}

ul>li::before {
  content: "▪︎";
  position: absolute;
  left: -1rem;
  font-size: 0.9rem;
}

ol {
  list-style-type: decimal;
  margin-left: 2rem;
  margin-bottom: 1rem;
}

blockquote {
  border-left: 4px solid var(--color-primary);
  padding-left: 1rem;
  margin-left: 0;
  margin-right: 0;
  color: var(--color-secondary);
  font-style: italic;
}

code {
  font-family: monospace;
  background-color: var(--color-bg);
  padding: 0.2rem 0.4rem;
  border-radius: 3px;
}

pre {
  background-color: var(--color-bg);
  padding: 1rem;
  border-radius: 5px;
  overflow-x: auto;
}

nav {
  display: flex;
  flex-wrap: wrap;
  /* Allow wrapping */
  justify-content: center;
  /* Center the content */
  gap: 1rem;
  /* Add some space between the buttons */
}
