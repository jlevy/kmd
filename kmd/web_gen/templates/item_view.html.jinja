<style>
.item-view {
  font-family: var(--font-sans);
  max-width: 800px;
  background-color: var(--color-bg);
}

.item-header {
}

.item-meta {
}

.item-type {
  font-family: var(--font-sans);
  text-transform: uppercase;
  font-size: 0.9rem;
  letter-spacing: 0.05em;
  margin-right: 1rem;
}

.item-format, .item-state {
  color: var(--color-secondary);
  margin-right: 1rem;
}

.item-path {
  font-family: monospace;
  font-size: 0.8rem;
  color: var(--color-primary);
  word-wrap: break-word;
  overflow-wrap: break-word;
  max-width: 100%;
}

.item-title {
  font-family: var(--font-serif);
  font-size: 1.2rem;
  margin: 1rem 0 0.5rem 0;
}

.item-url {
  margin-bottom: 0.5rem;
}

.item-url a {
  color: var(--color-primary);
  text-decoration: none;
}

.item-url a:hover {
  text-decoration: underline;
}

.item-description {
  font-family: var(--font-serif);
  color: var(--color-secondary);
  font-size: 0.85rem;
}
</style>

<div class="item-view">
  <div class="item-header">
    <div class="item-meta">
      <span class="item-type">{{ item.type.value }}</span>
      {% if item.format %}
      Format: <code class="item-format">{{ item.format.value }}</code>
      {% endif %}
      State: <span class="item-state">{{ item.state.value }}</span>
    </div>
    <div class="item-path">{{ item.store_path }}</div>
  </div>

  <h1 class="item-title">{{ item.title or "Untitled" }}</h1>
  
  {% if item.url %}
  <div class="item-url">
    <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.url }}</a>
  </div>
  {% endif %}

  {% if item.description %}
  <div class="item-description">
    {{ item.description }}
  </div>
  {% endif %}
</div>