<style>
.item-view {
  font-family: var(--font-sans);
  max-width: 800px;
}

.item-header {
}

.item-meta {
}

.item-type {
  font-family: var(--font-sans);
  text-transform: uppercase;
  font-size: var(--font-size-smaller);
  font-weight: 800;
  letter-spacing: 0.05em;
  margin-right: 1rem;
}

.item-format, .item-state {
  margin-right: 1rem;
}

.item-label {
  color: var(--color-secondary);
}

.item-path {
  position: relative;
  font-family: var(--font-mono);
  font-size: var(--font-size-mono);
  line-height: 1.15;
  margin-bottom: 1rem;
  padding: 0.5rem 1rem;
  background-color: var(--color-bg-alt);
  display: flex;
  align-items: flex-start;
}

.path-group {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 0.25rem;
  max-width: calc(100% - 2rem);
}

.path-text {
  word-break: break-all;
}

.copy-icon-wrapper {
  display: flex;
  align-items: center;
}

.open-external {
  position: absolute;
  top: 0.5rem;
  right: 1rem;
}

.action-icon {
  cursor: pointer;
  padding: 0.25rem;
  color: var(--color-secondary);
  transition: color 0.2s;
}

.action-icon:hover {
  color: var(--color-primary);
}

.item-body {
  padding: 0 1rem;
}

.item-title {
  font-family: var(--font-serif);
  font-size: 1.2rem;
  margin: 0.2rem 0 0.5rem 0;
}

.item-url {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

.item-url a {
  color: var(--color-primary);
  text-decoration: none;
}

.item-url a:hover {
  text-decoration: underline;
}

.item-description {
  font-family: var(--font-sans);
  color: var(--color-secondary);
}

.item-body {
  margin-top: 2rem;
  margin-bottom: 1rem;
  margin-left: 0;
  font-family: var(--font-serif);
  color: var(--color-secondary);
  font-size: var(--font-size-smaller);
}

</style>

<div class="item-view">
  <div class="item-path">
    <div class="path-group">
      <span class="path-text">{{ item.store_path }}</span>
      <span class="copy-icon-wrapper">
        <i data-feather="copy" class="action-icon" onclick="copyPath(this)" data-path="{{ item.store_path }}"></i>
      </span>
    </div>
    {% if page_url %}
    <a href="{{ page_url }}" target="_blank" rel="noopener noreferrer" class="open-external">
      <i data-feather="external-link" class="action-icon"></i>
    </a>
    {% endif %}
  </div>
  <div class="item-body">
    <div class="item-header">
      <div class="item-meta">
        <span class="item-type">{{ item.type.value }}</span>
        {% if item.format %}
        <span class="item-label">Format:</span> <span class="item-format">{{ item.format.value }}</span>
        {% endif %}
        <span class="item-label">State:</span> <span class="item-state">{{ item.state.value }}</span>
      </div>
    </div>

    <h1 class="item-title">{{ item.title or "Untitled" }}</h1>

    {% if item.url %}
    <div class="item-url">
      <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.url }}</a>
    </div>
    {% endif %}

    {% if item.description %}
    <div class="item-description">
      {{ item.description }}
    </div>
    {% endif %}

    {% if body_html %}
    <div class="item-body">
      {{ body_html|safe}}
    </div>
    {% endif %}
  </div>
</div>

<script>
function copyPath(element) {
  const path = element.getAttribute('data-path');
  navigator.clipboard.writeText(path).then(() => {
    // Change icon temporarily to show success
    element.setAttribute('data-feather', 'check');
    feather.replace();
    
    setTimeout(() => {
      element.setAttribute('data-feather', 'copy');
      feather.replace();
    }, 1000);
  });
}

// Initialize Feather icons
document.addEventListener('DOMContentLoaded', () => {
  feather.replace();
});
</script>